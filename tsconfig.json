{
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "target": "ES2018",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "node", "vitest", "cypress"],
  },
  "include": ["src", "test", "vite.config.ts"],
  "exclude": ["node_modules"]

}
